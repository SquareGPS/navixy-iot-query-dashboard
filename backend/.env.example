# Environment Configuration
NODE_ENV=development
PORT=3001

# Database Configuration (Local PostgreSQL)
# Used for: User authentication, app settings, dashboard schemas
DATABASE_URL=postgresql://reports_user@localhost:5432/reports_app_db

# Redis Cache (optional - for query result caching)
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# Security - More reasonable limits for development/testing
RATE_LIMIT_WINDOW_MS=300000
RATE_LIMIT_MAX_REQUESTS=5000

# CORS Configuration
# Comma-separated list of additional allowed origins (optional)
# Example: CORS_ALLOWED_ORIGINS=https://example.com,https://app.example.com
CORS_ALLOWED_ORIGINS=

# Analytics Service
ANALYTICS_SERVICE_URL=http://localhost:8001

# Report Schema Repository
# URL for default report schema (optional - for loading example dashboards)
REPORT_SCHEMA_URL=

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

